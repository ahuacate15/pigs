<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <ImageView
        android:id="@+id/iPiggletSaving"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@mipmap/ic_launcher_foreground" />

    <TextView
        android:id="@+id/tTitleSaving"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Title"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/iPiggletSaving"
        app:layout_constraintTop_toTopOf="@+id/iPiggletSaving" />

    <TextView
        android:id="@+id/tDescriptionSaving"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor"
        android:textAlignment="viewStart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tProgressSaving"
        app:layout_constraintTop_toBottomOf="@+id/tProgressSaving" />

    <TextView
        android:id="@+id/tProgressSaving"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Progreso:"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/tTitleSaving"
        app:layout_constraintTop_toBottomOf="@+id/tTitleSaving" />

    <TextView
        android:id="@+id/tAmountProgressSaving"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="$1020 de $5050"
        app:layout_constraintBottom_toBottomOf="@+id/tProgressSaving"
        app:layout_constraintStart_toEndOf="@+id/tProgressSaving"
        app:layout_constraintTop_toTopOf="@+id/tProgressSaving" />
</androidx.constraintlayout.widget.ConstraintLayout>